<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center"><h1>Detalles del Artista</h1></div>
  </div>
</div>
<div class="container">
  <div class="row">
    
    <div class="col-md-8">

    <%= link_to "Volver Atras", artists_path, :class => "btn btn-primary btn-xs" %>

      <h1><%= @artist.name  %></h1>
      <h4>Albums <%= @artist.albums.count %></h4>

      <div class="row">
        
        <% @artist.albums.each do |album| %>
          <div class="col-md-3 text-center">

            <img class="img-thumbnail" src="<%= album.image_url %>" alt="<%= album.name %>">
            <h3><%= album.name %></h3>  
            <p><%= album.released_at %></p>
          </div>
        <% end %>

      </div>


    </div>
   
    <div class="col-md-4">
      <img class="img-thumbnail" src="<%= @artist.image_url %>" alt="<%= @artist.name  %>">
    </div>

  </div>
</div>